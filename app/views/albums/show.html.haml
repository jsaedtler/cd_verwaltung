- content_for :breadcrumbs do
  = breadcrumbs(@user, @album)

- content_for :sidebar do
  - if current_user
    = link_to 'Edit Album', edit_user_artist_album_path(@user,@artist, @album)


.span-20.last
  .large
    = @album.title
.span-10.last.track_list
  = render :partial => '/tracks/track_list', :locals => {:album => @album}
.span-10.last
  = image_tag(@album.cover.url :medium)
.span-20.comments.last
  = render :partial => '/comments/form', :locals => {:album => @album, :artist => @artist, :comment => @comment}
  = render :partial => '/comments/list', :locals => {:comments => @album.comments}