!!!
%html
  %head
    %title CdVerwaltung
    = stylesheet_link_tag 'blueprint/screen'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .container
      .span-24.last
        = render :partial => '/layouts/navigation'
        - if flash[:notice]
          .success 
            = flash[:notice]
        - if flash[:error] 
          .error 
            = flash[:error]
      .span-24.last
        &nbsp
      .span-4 
        .span-4.last
          = link_to "New artist", new_user_artist_path(current_user) if current_user
        .span-4.last
          = link_to "My artists", user_artists_path(current_user) if current_user
        = yield :sidebar
      .span-20.last
        = yield
      .span-24

